<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Parents of base styles. Can be customized according to API level. -->
    <style name="Theme.Genexus.Base.Dark" parent="@style/Theme.AppCompat.NoActionBar" />
    <style name="Theme.Genexus.Base.Light" parent="@style/Theme.AppCompat.Light.NoActionBar" />
    <style name="Theme.Genexus.Base.Light.DarkActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar" />
    <style name="Theme.Genexus.Base.DayNight" parent="@style/Theme.AppCompat.DayNight.NoActionBar" />

    <!-- Styles that are directly inherited by application-generated styles.
         These properties apply to all API levels. -->
    <style name="Theme.Genexus.Dark" parent="@style/Theme.Genexus.Base.Dark">
        <item name="gx_base_theme">Dark</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.Genexus.ActionBar</item>
        <item name="actionBarShadowBackground">@drawable/toolbar_dropshadow</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="spinnerUnderlineCustomStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="Theme.Genexus.Light" parent="@style/Theme.Genexus.Base.Light">
        <item name="gx_base_theme">Light</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.Genexus.ActionBar</item>
        <item name="actionBarShadowBackground">@drawable/toolbar_dropshadow_light</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="spinnerUnderlineCustomStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="Theme.Genexus.Light.DarkActionBar" parent="@style/Theme.Genexus.Base.Light.DarkActionBar">
        <item name="gx_base_theme">LightWithDarkActionBar</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.Genexus.Dark.ActionBar</item>
        <item name="actionBarPopupCustomTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarShadowBackground">@drawable/toolbar_dropshadow_light</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>

        <item name="spinnerUnderlineCustomStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="Theme.Genexus.DayNight" parent="Theme.Genexus.Base.DayNight">
        <item name="gx_base_theme">Light</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.Genexus.ActionBar</item>
        <item name="actionBarShadowBackground">@drawable/toolbar_dropshadow_light</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="spinnerUnderlineCustomStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <!-- Allow customize action bar icons colors -->
    <style name="ThemeOverlay.Genexus.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- change this color property in generated main -->
        <!-- <item name="colorControlNormal">@android:color/darker_gray</item> -->
    </style>
    <!-- Allow customize action bar icons colors -->
    <style name="ThemeOverlay.Genexus.Dark.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- change this color property in generated main -->
        <!-- <item name="colorControlNormal">@android:color/darker_gray</item> -->
    </style>

    <style name="CustomDialogDark" parent="@style/Theme.Genexus.Base.Dark" >
        <!-- <item name="android:windowBackground">@null</item> -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomDialogLight" parent="@style/Theme.Genexus.Base.Light" >
        <!-- <item name="android:windowBackground">@null</item> -->
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>