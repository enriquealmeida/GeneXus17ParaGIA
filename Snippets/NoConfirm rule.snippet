<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
      <Title>NoConfirm</Title>
      <Shortcut>ncfm</Shortcut>
      <Description>Avoids data entry confirmation at a given level</Description>
      <Author>Artech</Author>
    </Header>
    <Snippet>
      <Declarations>
				<Literal Editable="true" >
					<ID>attribute</ID>
					<ToolTip>Attribute used to indicate the level were the confirmation rule is not desired</ToolTip>
					<Default>attribute</Default>
					<Function>
					</Function>
				</Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[NoConfirm($attribute$);]]></Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>