<?xml version="1.0" encoding="utf-8" ?>
<Rules Version="1.0" Name="GeneXusRules">
	<RuleDefinition Name="Switch" Description="Create a Switch control" When="^(switch)">
		<Action>CreateControl(Switch)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Radio Button" Description="Create a Radiobutton control" When="^(radiobutton)">
		<Action>CreateControl(RadioButton)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Combobox" Description="Create a Combobox control" When="^(combobox|listbox)">
		<Action>CreateControl(Combobox)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Check" Description="Create a Check control" When="^(checkmark|checkbox)">
		<Action>CreateControl(CheckBox)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Button" Description="Create a Button control" When="^(button)">
		<Action>CreateControl(Button)</Action>
		<ThemeAction>CreateClass(Button)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Slider" Description="Create a Slider control" When="^(slider)">
		<Action>CreateControl(Slider)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Search Box" Description="Create a SearchBox control" When="^(searchbox|searchbar|search box|search bar)">
		<Action>CreateControl(SearchBox)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Wheel" Description="Create a Wheel control" When="^(wheel)">
		<Action>CreateControl(Wheel)</Action>
		<ThemeAction>CreateClass(AttributeWithType)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Application Bar" Description="Creates an Application Bar control" When="^(appbar|app bar|navbar|nav bar|navigation|navigationbar)">
		<Action>CreateControl(NavigationBar)</Action>
		<ThemeAction>CreateClass(NavigationBar)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Grid" Description="Create a Grid control" When="^(grid)">
		<Action>CreateControl(Grid)</Action>
		<ThemeAction>CreateClass(Grid)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Tab" Description="Create a Tab control" When="^(tabs)">
		<Action>CreateControl(Tabs)</Action>
		<ThemeAction>CreateClass(Tabs)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Navigation Tab" Description="Creates a Menu object" When="^(menutab|menu tab|navtab|navigation tab|tabbar|tab bar|bottoom navigation|boottomnavigation)">
		<Action>Ignore</Action>
		<ThemeAction>CreateClass(Menu)</ThemeAction>
	</RuleDefinition>
	<RuleDefinition Name="Ignore Elements" Description="Ignore elements" When="^(_|keyboards|keyboard|toolbar|status bar)">
		<Action>Ignore</Action>
	</RuleDefinition>
</Rules>

