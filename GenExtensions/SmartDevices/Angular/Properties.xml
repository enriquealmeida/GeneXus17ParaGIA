<?xml version="1.0"?>
<Content xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <Object id="Angular">
        <Group>
            <Name>General</Name>
            <Type>Main</Type>
            <Children>
                <Group>
                    <Id>AngularGroup</Id>
                    <Name>Angular Specific</Name>
                    <Type>Group</Type>
                    <Children>

                        <Prop>
                            <Id>ANGULAR_SETUP_COMMAND</Id>
                            <Name>Setup Command</Name>
                            <Description><![CDATA[For each main an install script must be run once]]></Description>
                            <Type>Text</Type>
                            <Default><![CDATA[npm install]]></Default>
                        </Prop>

                        <Prop>
                            <Id>ANGULAR_RUN_COMMAND</Id>
                            <Name>Run Command</Name>
                            <Description><![CDATA[Sets the command used to start the web application, by default the app is served on localhost on a free port]]></Description>
                            <Type>Text</Type>
                            <Default>npm start</Default>
                        </Prop>

                        <Prop>
                            <Id>ANGULAR_GENERATION_MODE</Id>
                            <Name>Build Mode</Name>
                            <Description><![CDATA[This property allows the developer to specify in which mode the package will be generated. Development mode will include the necessary elements for testing and debugging.]]></Description>
                            <Type>Combo</Type>
                            <Default>Prototype</Default>
                            <Values>
                                <Value id='Prototype' desc='Prototype'/>
                                <Value id='Development' desc='Development'/>
                                <Value id='Distribution' desc='Distribution'/>
                            </Values>
                        </Prop>
						
						<Prop>
                            <Id>ANGULAR_DEPLOY_COMMAND</Id>
                            <Name>Deploy Command</Name>
                            <Description><![CDATA[Sets the command used to deploy the Angular application]]></Description>
                            <Type>Text</Type>
                            <Default>npm run deploy</Default>
                        </Prop>

                        <Prop>
                            <Id>ANGULAR_RUN_TARGET</Id>
                            <Name>Run Target</Name>
                            <Description><![CDATA[Target server that will be used to serve Angular application]]></Description>
                            <Type>Combo</Type>
                            <Default>DEFAULT</Default>
                            <Values>
                                <Value id='DEFAULT' desc='Default'/>
                                <Value id='DEVSERVER' desc='Angular development Server'/>
                                <Value id='LOCAL' desc='Local WebServer'/>
                            </Values>
                        </Prop>
                        <!--Prop>
                            <Id>ANGULAR_PWA_FAVICON</Id>
                            <Name>Favicon Image</Name>
                            <Description><![CDATA[KB image name (at least 72x72]]></Description>
                            <Type>Text</Type>
                            
                        </Prop>
                        <Prop>
                            <Id>ANGULAR_PWA_APPICON</Id>
                            <Name>Web App Icon Image</Name>
                            <Description><![CDATA[KB image name (must include 192x192 and 512x512 variants]]></Description>
                            <Type>Text</Type>
                        </Prop-->

                    </Children>
                </Group>
            </Children>
        </Group>
    </Object>
</Content>